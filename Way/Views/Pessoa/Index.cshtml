@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2>Gerência de Pessoas</h2>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="pull-right">
            <button id="edita-pessoa" type="button" class="btn btn-default hide"> <i class="fa  fa-edit fa-fw"></i>&nbsp;Editar pessoa</button>
            <button id="adiciona-pessoa" type="button" class="btn btn-success"> <i class="fa fa-plus-square fa-fw"></i>&nbsp;Adicionar pessoa</button>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="col-lg-12">
        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover" id="usuariosCadastrados">
                <thead>
                    <tr>
                        <th>Primeiro nome</th>
                        <th>Último nome</th>
                        <th>Documento (CPF/CNPJ)</th>
                        <th>Ativo</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/js/Views/Pessoa.js?v=1.0.0"></script>